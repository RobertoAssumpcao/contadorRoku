<?xml version="1.0" encoding="utf-8"?>
<component name="Contador" extends="Scene">
  <children>
    <!-- Fundo -->
    <Poster width="1280" height="720" uri="pkg:/images/fundojj.jpg" />

    <!-- Área segura -->
    <Group id="SafeArea" width="1200" height="680" translation="[40, 20]">

      <!-- Relógio (hora atual) -->
      <Label id="timeLabel" text="00:00" width="1200" height="100"
        horizAlign="center" vertAlign="top" translation="[0, 0]"
        color="0x000000FF" font="font:ExtraLargeBoldSystemFont" />

      <!-- Nome da academia -->
      <Label id="tituloAcademiaLabel" text="Centro de Treinamento GFTeam - Praça das Nações"
        width="1160" height="80" horizAlign="center" vertAlign="top"
        translation="[0, 90]" color="0x000000FF" font="font:LargeBoldSystemFont" />

      <!-- Dia da semana + data -->
      <Label id="dayLabel" text="Terça-feira, 21 de Maio"
        width="1000" height="60" horizAlign="center" vertAlign="top"
        translation="[0, 160]" color="0x333333FF" font="font:MediumBoldSystemFont" />

      <!-- Cronômetro digital -->
      <Label id="cronometroLabel" text="00:00"
        width="400" height="80" horizAlign="center" vertAlign="top"
        translation="[400, 230]" color="0xFF0000FF" font="font:ExtraLargeBoldSystemFont" />

      <!-- Botões do cronômetro -->
      <Group id="buttonsGroup" translation="[200, 330]">

        <!-- Play -->
        <Rectangle id="btnPlay" width="100" height="50" translation="[0, 0]"
          color="0xDDDDDDFF" focusable="true">
          <Label text="▶ Play" horizAlign="center" vertAlign="center"
            width="100" height="50" />
        </Rectangle>

        <!-- Pause -->
        <Rectangle id="btnPause" width="120" height="50" translation="[110, 0]"
          color="0xDDDDDDFF" focusable="true">
          <Label text="⏸ Pause" horizAlign="center" vertAlign="center"
            width="120" height="50" />
        </Rectangle>

        <!-- +3s -->
        <Rectangle id="btnAdd3" width="80" height="50" translation="[240, 0]"
          color="0xDDDDDDFF" focusable="true">
          <Label text="+3s" horizAlign="center" vertAlign="center"
            width="80" height="50" />
        </Rectangle>

        <!-- +5s -->
        <Rectangle id="btnAdd5" width="80" height="50" translation="[330, 0]"
          color="0xDDDDDDFF" focusable="true">
          <Label text="+5s" horizAlign="center" vertAlign="center"
            width="80" height="50" />
        </Rectangle>

        <!-- +10s -->
        <Rectangle id="btnAdd10" width="90" height="50" translation="[420, 0]"
          color="0xDDDDDDFF" focusable="true">
          <Label text="+10s" horizAlign="center" vertAlign="center"
            width="90" height="50" />
        </Rectangle>

        <!-- Reset -->
        <Rectangle id="btnReset" width="100" height="50" translation="[520, 0]"
          color="0xFFAAAAFF" focusable="true">
          <Label text="🔄 Reset" horizAlign="center" vertAlign="center"
            width="100" height="50" />
        </Rectangle>
      </Group>

      <!-- Logo da academia -->
      <Poster id="icon" uri="pkg:/images/LOGOJOAOVERAS.png"
        width="150" height="150" translation="[1020, 490]" />
    </Group>
  </children>

  <script type="text/brightscript" uri="pkg:/source/contador.brs" />
</component>
